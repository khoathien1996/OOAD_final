<Window x:Class="QuanLyHocSinh_OOAD.LopInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Thông tin lớp" Height="248.082" Width="500" Closing="Window_Closing">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="back1.png" TileMode="FlipXY" Stretch="None"/>
        </Grid.Background>
        <Label x:Name="LabelKhoi" Content="Khối lớp" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelSTT" Content="Số thứ tự" HorizontalAlignment="Left" Margin="20,76,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSTT" HorizontalAlignment="Left" Height="23" Margin="129,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="labelTenLop" Content="Tên lớp" HorizontalAlignment="Left" Margin="281,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTenLop" HorizontalAlignment="Left" Height="23" Margin="372,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="labelSiSo" Content="Sĩ số" HorizontalAlignment="Left" Margin="281,76,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSiSo" HorizontalAlignment="Left" Height="23" Margin="372,80,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="labelMaGVCN" Content="Mã GVCN" HorizontalAlignment="Left" Margin="20,136,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTenGVCN" HorizontalAlignment="Left" Height="23" Margin="281,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="191"/>
        <ComboBox x:Name="cmbKhoi" HorizontalAlignment="Left" Margin="129,24,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:Name="cmbMaGVCN" HorizontalAlignment="Left" Margin="129,139,0,0" VerticalAlignment="Top" Width="100" DropDownClosed="cmbMaGVCN_DropDownClosed"/>
        <Button x:Name="btnLuu" Content="Lưu" HorizontalAlignment="Left" Margin="281,187,0,0" VerticalAlignment="Top" Width="75" Click="btnLuu_Click_1"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="397,187,0,0" VerticalAlignment="Top" Width="75" Click="btnThoat_Click_1"/>

    </Grid>
</Window>
